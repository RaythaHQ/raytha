@page "/raytha/site-pages"
@model Raytha.Web.Areas.Admin.Pages.SitePages.Index

@{
    var pageTitle = "Site Pages";
    Layout = "SidebarLayout";
    ViewData["Title"] = pageTitle;
    ViewData["ActiveMenu"] = "Site Pages";
}

@(await Html.PartialAsync("_Partials/TableCreateAndSearchBar", new BaseTableCreateAndSearchBarViewModel
{
    Pagination = Model.ListView,
    EntityName = "site page",
    CreateActionName = RouteNames.SitePages.Create
}))

<div class="raytha-data-card mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-centered table-nowrap mb-0 rounded">
                <thead class="thead-light">
                    <tr>
                        @(await Html.PartialAsync("_Partials/TableColumnHeader", new BaseTableColumnHeaderViewModel()
                        {
                            Pagination = Model.ListView,
                            PropertyName = "Title",
                            IsFirst = true,
                            DisplayName = ViewModelExtensions.GetDisplayName<Index.SitePagesListItemViewModel>(p => p.Title)
                        }))
                        <th class="border-0">URL Path</th>
                        @(await Html.PartialAsync("_Partials/TableColumnHeader", new BaseTableColumnHeaderViewModel()
                        {
                            Pagination = Model.ListView,
                            PropertyName = "IsPublished",
                            DisplayName = ViewModelExtensions.GetDisplayName<Index.SitePagesListItemViewModel>(p =>
                            p.IsPublished)
                        }))
                        @(await Html.PartialAsync("_Partials/TableColumnHeader", new BaseTableColumnHeaderViewModel()
                        {
                            Pagination = Model.ListView,
                            PropertyName = "IsDraft",
                            DisplayName = ViewModelExtensions.GetDisplayName<Index.SitePagesListItemViewModel>(p =>
                            p.IsDraft)
                        }))
                        <th class="border-0">Last modified</th>
                        <th class="border-0">Modified by</th>
                        <th class="border-0 rounded-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListView.Items)
                    {
                        <tr>
                            <td>
                                <a asp-page="@RouteNames.SitePages.Edit" asp-route-id="@item.Id">@item.Title</a>
                            </td>
                            <td>
                                <code>/@item.RoutePath</code>
                            </td>
                            <td>
                                @if (item.IsPublished == "Yes")
                                {
                                    <span class="badge bg-success">Published</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Unpublished</span>
                                }
                            </td>
                            <td>
                                @if (item.IsDraft == "Yes")
                                {
                                    <span class="badge bg-warning text-dark">Draft</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>@item.LastModificationTime</td>
                            <td>@item.LastModifierUser</td>
                            <td>
                                <a asp-page="@RouteNames.SitePages.Edit" asp-route-id="@item.Id" class="me-2">Edit</a>
                                <a asp-page="@RouteNames.SitePages.Layout" asp-route-id="@item.Id">Layout</a>
                                @if (item.IsHomePage)
                                {
                                    <svg class="icon icon-xs ms-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                        stroke-width="1.5" stroke="currentColor" class="w-6 h-6" title="Home Page">
                                        <path stroke-linecap="round" stroke-linejoin="round"
                                            d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
                                    </svg>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <partial name="_Partials/TablePagination" model="@Model.ListView" />
        </div>
    </div>
</div>
