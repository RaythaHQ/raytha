@page "/raytha/themes/edit/{themeId}/web-templates/edit/{id}"
@model Raytha.Web.Areas.Admin.Pages.Themes.WebTemplates.Edit
@inject IRelativeUrlBuilder RelativeUrlBuilder

@{
    var pageTitle = "Themes > Web templates > Edit";
    Layout = "SubActionLayout";
    ViewData["Title"] = pageTitle;
    ViewData["ActiveMenu"] = "Themes";

    var back = new BackLinkOptions
    {
        Page = $"/Themes/WebTemplates/Index",
        RouteValues = new RouteValueDictionary { ["themeId"] = Model.Form.ThemeId }
    };

    var uploadOptions = new FileUploadOptions
    {
        DragDropZoneTarget = "#uploadassets-dragdrop",
        CopyUrlsTarget = "#uploadassets-urls",
        ThemeId = Model.Form.ThemeId
    };
}

@(await Html.PartialAsync("_Partials/BackToList", back))
<form asp-page="/Themes/WebTemplates/Edit" asp-page-route-id="@Model.Form.Id" method="post" class="py-4">
    <div class="col-lg-12">
        <div class="mb-3">
            <label class="form-label raytha-required" asp-for="Form.Label"></label>
            <input type="text" class="form-control @Model.HasError("Label")" asp-for="Form.Label" required>
            <div class="invalid-feedback">@Model.ErrorMessageFor("Label")</div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="mb-3">
            <label class="form-label" asp-for="Form.DeveloperName"></label>
            <input type="text" class="form-control @Model.HasError("DeveloperName")" asp-for="Form.DeveloperName"
                readonly>
            <div class="invalid-feedback">@Model.ErrorMessageFor("DeveloperName")</div>
        </div>
    </div>
    <div class="col-lg-12 col-md-12">
        <div class="mb-3">
            <label class="form-label" asp-for="Form.ParentTemplateId"></label>
            <select class="form-select @Model.HasError("ParentTemplateId")" asp-for="Form.ParentTemplateId"
                asp-items="@(new SelectList(Model.Form.ParentTemplates, "Id", "Label"))">
                <option value="">(none)</option>
            </select>
            <div class="invalid-feedback">@Model.ErrorMessageFor("ParentTemplateId")</div>
        </div>
    </div>
    @if (!Model.Form.IsBuiltInTemplate)
    {
        <div class="col-lg-12 my-4">
            <div class="form-check">
                <input data-templates--isbaselayout-target="isBaseLayout"
                    class="form-check-input @Model.HasError("IsBaseLayout")" type="checkbox" asp-for="Form.IsBaseLayout"
                    data-action="change->templates--isbaselayout#toggleBaseLayoutInstructions">
                <label class="form-check-label" asp-for="Form.IsBaseLayout"></label>
                <div class="invalid-feedback">@Model.ErrorMessageFor("IsBaseLayout")</div>
            </div>
            <div class="form-text" data-templates--isbaselayout-target="isBaseLayoutInstructions">Base
                layouts require the use of <code>{% renderbody %}</code> in the template. This tag will be
                replaced by the content in child templates.</div>
        </div>
    }
    else
    {
        <div class="col-lg-12 my-4">
            <div class="form-check">
                <input data-templates--isbaselayout-target="isBaseLayout" class="form-check-input" type="checkbox"
                    asp-for="Form.IsBaseLayout" disabled>
                <input type="hidden" asp-for="Form.IsBaseLayout">
                <label class="form-check-label" asp-for="Form.IsBaseLayout"></label>
            </div>
            <div class="form-text">This option is not editable for built-in default templates.</div>
            <div class="form-text" data-templates--isbaselayout-target="isBaseLayoutInstructions">Base
                layouts require the use of <code>{% renderbody %}</code> in the template. This tag will be
                replaced by the content in child templates.</div>
        </div>
    }
    <div class="col-lg-12 col-md-12 my-4" data-templates--isbaselayout-target="templateAccessList">
        <div class="mb-3">
            <label class="form-label" asp-for="@Model.Form.TemplateAccessToModelDefinitions"></label>
            @for (int i = 0; i < Model.Form.TemplateAccessToModelDefinitions.Count(); i++)
            {
                <div class="form-check">
                    <input class="form-check-input @Model.HasError("TemplateAccessToModelDefinitions")" type="checkbox"
                        asp-for="@Model.Form.TemplateAccessToModelDefinitions[i].Value">
                    <input type="hidden" asp-for="@Model.Form.TemplateAccessToModelDefinitions[i].Id" />
                    <input type="hidden" asp-for="@Model.Form.TemplateAccessToModelDefinitions[i].Key" />
                    <label class="form-check-label"
                        asp-for="@Model.Form.TemplateAccessToModelDefinitions[i].Value">@Model.Form.TemplateAccessToModelDefinitions[i].Key</label>
                    @if (i == Model.Form.TemplateAccessToModelDefinitions.Length - 1)
                    {
                        <div class="invalid-feedback">@Model.ErrorMessageFor("TemplateAccessToModelDefinitions")
                        </div>
                    }
                </div>
            }

        </div>
    </div>
    <div class="col-lg-12 col-md-12 my-4" data-templates--isbaselayout-target="allowAccessForNewContentTypes">
        <div class="form-check">
            <input class="form-check-input @Model.HasError("AllowAccessForNewContentTypes")" type="checkbox"
                asp-for="Form.AllowAccessForNewContentTypes">
            <label class="form-check-label" asp-for="Form.AllowAccessForNewContentTypes"></label>
            <div class="invalid-feedback">@Model.ErrorMessageFor("AllowAccessForNewContentTypes")</div>
        </div>
        <div class="form-text">At least 1 non base layout template must be available for new content
            types.</div>
    </div>
    <div class="col-lg-12">
        <div class="mb-3">
            <label class="form-label raytha-required" asp-for="Form.Content"></label><br />
            <button class="btn btn-sm btn-secondary mb-2" type="button" data-bs-toggle="offcanvas"
                data-bs-target="#insertvariablemenu" aria-controls="insertvariablemenu">Insert
                variable</button>

            <div id="editorContainer" style="height:600px;overflow: auto;"></div>
            <input type="hidden" asp-for="Form.Content" id="Form_Content">
            <div class="invalid-feedback">@Model.ErrorMessageFor("Code")</div>

            <!-- Upload assets / copy URLs -->
            <div id="uploadassets">
                <div id="uploadassets-dragdrop"></div>
                <div>
                    <ul id="uploadassets-urls" class="list-group">
                        @foreach (var mediaItem in Model.Form.MediaItems)
                        {
                            <li class="list-group-item">
                                <a target="_blank" class="text-secondary"
                                    href="@RelativeUrlBuilder.MediaRedirectToFileUrl(@mediaItem.ObjectKey)">
                                    @mediaItem.FileName
                                </a>
                                |
                                <a href="javascript:void(0);" class="text-primary" data-id="@mediaItem.ObjectKey"
                                    data-copyas="public">
                                    Copy as public
                                </a>
                                |
                                <a href="javascript:void(0);" class="text-primary" data-id="@mediaItem.ObjectKey"
                                    data-copyas="redirect">
                                    Copy as redirect
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" asp-for="Form.Id">
    <input type="hidden" asp-for="Form.IsBuiltInTemplate">
    <button type="submit" class="btn btn-success mt-4">Publish changes</button>
</form>
<partial name="_InsertVariableMenu.cshtml" model="Model.Form.TemplateVariables" />

<script type="importmap">
  {
    "imports": {
      "style-mod": "https://esm.sh/style-mod",
      "w3c-keyname": "https://esm.sh/w3c-keyname",
      "crelt": "https://esm.sh/crelt",
