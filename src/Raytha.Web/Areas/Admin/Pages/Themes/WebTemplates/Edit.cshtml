    }
  }
</script>

<script type="module">
    import { EditorState } from '@@codemirror/state';
    import { EditorView, basicSetup } from 'codemirror';
    import { html } from '@@codemirror/lang-html';
    import { javascript } from '@@codemirror/lang-javascript';
    import { css } from '@@codemirror/lang-css';
    import { indentWithTab } from '@@codemirror/commands';
    import { keymap } from '@@codemirror/view';

    // --- Base layout toggle (vanilla JS) ---
    function setupBaseLayoutToggle() {
        const checkbox = document.getElementById('Form_IsBaseLayout');
        const instructions = document.getElementById('isBaseLayoutInstructions');
        const accessList = document.getElementById('templateAccessList');
        const allowNewTypes = document.getElementById('allowAccessForNewContentTypes');
        if (!checkbox || !instructions || !accessList || !allowNewTypes) return;

        const applyState = () => {
            const isChecked = !!checkbox.checked;
            // mimic old Stimulus logic
            instructions.hidden = !isChecked ? true : false;
            accessList.hidden = isChecked ? true : false;
            allowNewTypes.hidden = isChecked ? true : false;
            // ensure form value is "true"/"false" as strings
            checkbox.value = isChecked ? 'true' : 'false';
        };

        checkbox.addEventListener('change', applyState, { passive: true });
        // run on load
        applyState();
    }

    // --- CodeMirror editor (already vanilla) ---
    const startState = EditorState.create({
        doc: @Html.Raw(Json.Serialize(Model.Form.Content ?? string.Empty)),
        extensions: [
            basicSetup,
            html({
                matchClosingTags: true,
                autoCloseTags: true,
                codeLanguages: [javascript(), css()]
            }),
            keymap.of([indentWithTab]),
            EditorView.updateListener.of((update) => {
                if (update.docChanged) {
                    const el = document.getElementById('Form_Content');
                    if (el) el.value = view.state.doc.toString();
                }
            })
        ],
    });

    const view = new EditorView({
        state: startState,
        parent: document.getElementById('editorContainer')
    });

    // Initialize vanilla hooks
    document.addEventListener('DOMContentLoaded', function () {
        setupBaseLayoutToggle();
        setupCopyAssetLinks();
    });
</script>

@Html.Partial("_Partials/FileUpload", uploadOptions)