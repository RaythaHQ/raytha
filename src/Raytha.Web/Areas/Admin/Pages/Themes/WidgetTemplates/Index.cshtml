@page "/raytha/themes/edit/{themeId}/widget-templates"
@model Raytha.Web.Areas.Admin.Pages.Themes.WidgetTemplates.Index

@{
    var pageTitle = "Widget templates";
    Layout = "SidebarLayout";
    ViewData["Title"] = pageTitle;
    ViewData["ActiveMenu"] = "Themes";
    var back = new BackLinkOptions
    {
        Page = RouteNames.Themes.Edit,
        RouteValues = new RouteValueDictionary { ["id"] = Model.ListView.ThemeId },
        Text = "Back to theme",
    };
}
<partial name="_Partials/PageHeading" model="pageTitle" />
<nav class="navbar navbar-expand-lg navbar-light raytha-view-nav raytha-border-top">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        @(await Html.PartialAsync("_Partials/BackToList", back))
        <div class="d-flex align-items-center">
            <form class="d-flex" asp-page="@RouteNames.Themes.WidgetTemplates.Index"
                asp-route-themeId="@Model.ListView.ThemeId" method="get">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search"
                    value="@Model.ListView.Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
    </div>
</nav>

<div class="raytha-data-card mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-centered table-nowrap mb-0 rounded">
                <thead class="thead-light">
                    <tr>
                        @(await Html.PartialAsync("_Partials/TableColumnHeader", new BaseTableColumnHeaderViewModel
                        {
                            Pagination = Model.ListView,
                            PropertyName = "Label",
                            IsFirst = true,
                            DisplayName = ViewModelExtensions.GetDisplayName<Index.WidgetTemplatesListItemViewModel>(p => p.Label)
                        }))
                        @(await Html.PartialAsync("_Partials/TableColumnHeader", new BaseTableColumnHeaderViewModel()
                        {
                            Pagination = Model.ListView,
                            PropertyName = "DeveloperName",
                            DisplayName = ViewModelExtensions.GetDisplayName<Index.WidgetTemplatesListItemViewModel>(p => p.DeveloperName)
                        }))
                        @(await Html.PartialAsync("_Partials/TableColumnHeader", new BaseTableColumnHeaderViewModel()
                        {
                            Pagination = Model.ListView,
                            PropertyName = "LastModificationTime",
                            DisplayName = ViewModelExtensions.GetDisplayName<Index.WidgetTemplatesListItemViewModel>(p => p.LastModificationTime)
                        }))
                        <th class="border-0">Last modified by</th>
                        <th class="border-0 rounded-end">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListView.Items)
                    {
                        <tr>
                            <td>@item.Label</td>
                            <td><code>@item.DeveloperName</code></td>
                            <td>@item.LastModificationTime</td>
                            <td>@item.LastModifierUser</td>
                            <td>
                                <a asp-page="@RouteNames.Themes.WidgetTemplates.Edit" 
                                   asp-route-id="@item.Id"
                                   asp-route-themeId="@Model.ListView.ThemeId">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <partial name="_Partials/TablePagination" model="@Model.ListView" />
        </div>
    </div>
</div>

<div class="alert alert-info">
    <i class="bi bi-info-circle me-2"></i>
    <strong>Note:</strong> Widget templates define how each widget type is rendered on your site pages. 
    Each widget type (Hero, WYSIWYG, Card Grid, etc.) has its own Liquid template that controls its appearance.
</div>

