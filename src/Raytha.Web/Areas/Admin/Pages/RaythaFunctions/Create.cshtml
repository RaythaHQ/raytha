@page "/raytha/functions/create"
@using Raytha.Domain.ValueObjects
@model Raytha.Web.Areas.Admin.Pages.RaythaFunctions.Create

@{
    var pageTitle = "Create function";
    Layout = "SidebarLayout";
    ViewData["Title"] = pageTitle;
    ViewData["ActiveMenu"] = "Raytha Functions";
}

<div class="row mb-4">
    @Html.Partial("_Partials/PageHeading", ViewData["Title"])
    <div class="col-xxl-7 col-xl-8 col-lg-9 col-md-12">
        <div class="card border-0 shadow mb-4">
            <div class="card-body">
                @(await Html.PartialAsync("_Partials/BackToList", "/RaythaFunctions/Index"))
                <form asp-route="functionscreate" method="post" class="py-4"
                    data-controller="shared--developername raythafunctions--codehighlighting">
                    <div class="col-lg-12 col-md-12">
                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="Form.Name"></label>
                            <input type="text" class="form-control @Model.HasError("Name")" asp-for="Form.Name"
                                data-shared--developername-target="name"
                                data-action="keyup->shared--developername#setDeveloperName change->shared--developername#setDeveloperName">
                            <div class="invalid-feedback">@Model.ErrorMessageFor("Name")</div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12">
                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="Form.DeveloperName"></label>
                            <input type="text" class="form-control @Model.HasError("DeveloperName")"
                                asp-for="Form.DeveloperName" data-shared--developername-target="developername">
                            <div class="invalid-feedback">@Model.ErrorMessageFor("DeveloperName")</div>
                            <div class="form-text">You cannot change the developer name after it has been created.</div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="Form.TriggerType"></label>
                            <select class="form-select @Model.HasError("TriggerType")" asp-for="Form.TriggerType">
                                @foreach (var supportedTriggerType in RaythaFunctionTriggerType.SupportedTypes)
                                {
                                    <option value="@supportedTriggerType.DeveloperName">@supportedTriggerType.Label</option>
                                }
                            </select>
                            <div class="invalid-feedback">@Model.ErrorMessageFor("TriggerType")</div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-check">
                            <input class="form-check-input @Model.HasError("IsActive")" type="checkbox"
                                asp-for="Form.IsActive">
                            <label class="form-check-label" asp-for="Form.IsActive"></label>
                            <div class="invalid-feedback">@Model.ErrorMessageFor("IsActive")</div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="Form.Code"></label><br />
                            <div class="@Model.HasError("Code")" id="editorContainer"
                                style="height:600px;overflow: auto;"
                                data-raythafunctions--codehighlighting-target="editor"></div>
                            <input type="hidden" asp-for="Form.Code"
                                data-raythafunctions--codehighlighting-target="textarea">
                            <div class="invalid-feedback">@Model.ErrorMessageFor("Code")</div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success mt-4">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>
<style>
    .CodeMirror {
        height: 100%;
    }
</style>