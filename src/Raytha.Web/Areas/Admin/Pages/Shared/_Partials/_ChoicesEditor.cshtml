@model dynamic
@{
    // Expects the caller to pass:
    // - Choices: IEnumerable<FieldChoiceItemViewModel>
    // - ChoicesSectionId: string (unique id for the container)
    // - HasError: Func<string, string> (error checking function)
    // - ErrorMessageFor: Func<string, string?> (error message function)

    var choicesEnumerable = Model.Choices ?? Enumerable.Empty<dynamic>();
    var choices = choicesEnumerable is IEnumerable<dynamic> ? ((IEnumerable<dynamic>)choicesEnumerable).ToList() : new
    List<dynamic>();
    var choicesSectionId = Model.ChoicesSectionId ?? "choices-section";
    Func<string, string> hasErrorFunc = Model.HasError;
    Func<string, string?> errorMessageFunc = Model.ErrorMessageFor;
    var index = 0;
}

<div class="col-lg-12" id="@choicesSectionId" style="display: none;">
    <div class="mb-3">
        <label class="form-label raytha-required">Choices</label>
        <div class="form-text mb-2">Define the choices for select fields (e.g., dropdown, radio buttons, checkboxes)
        </div>
        @if (!string.IsNullOrEmpty(errorMessageFunc("Choices")))
        {
            <div class="text-danger mb-2">@errorMessageFunc("Choices")</div>
        }
        <div id="choices-list" class="choices-list">
            @foreach (var choice in choices)
            {
                <div class="row mb-2" data-choice-row>
                    <div class="col-4">
                        <input type="text" name="Form.Choices[@index].Label" class="form-control @hasErrorFunc("Choices")"
                            placeholder="Label" value="@choice.Label" data-choice-label data-ordinal="@index" required>
                    </div>
                    <div class="col-4">
                        <input type="text" name="Form.Choices[@index].DeveloperName"
                            class="form-control @hasErrorFunc("Choices")" placeholder="Developer Name"
                            value="@choice.DeveloperName" data-choice-developername required>
                    </div>
                    <div class="col-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="Form.Choices[@index].Disabled"
                                value="true" @(Convert.ToBoolean(choice.Disabled) ? "checked" : "") data-choice-disabled>
                            <label class="form-check-label">Disabled</label>
                        </div>
                    </div>
                    <div class="col-1">
                        <div class="dropdown">
                            <a class="dropdown-toggle" data-bs-toggle="dropdown" data-bs-auto-close="true" href="#"
                                role="button" aria-expanded="false">
                                <svg class="icon icon-sm" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M5 12h.01M12 12h.01M19 12h.01" />
                                </svg>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="javascript:void(0);" data-action="insert">Insert</a></li>
                                <li><a class="dropdown-item" href="javascript:void(0);" data-action="moveUp"
                                        data-move-up>Move up</a></li>
                                <li><a class="dropdown-item" href="javascript:void(0);" data-action="moveDown"
                                        data-move-down>Move down</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item link-danger" href="javascript:void(0);"
                                        data-action="remove">Remove</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                index++;
            }
        </div>

        <div class="row mt-3">
            <div class="col-12">
                <a href="javascript:void(0);" class="btn btn-sm btn-secondary" data-action="addAnother">Add another
                    choice</a>
            </div>
        </div>
    </div>
</div>
