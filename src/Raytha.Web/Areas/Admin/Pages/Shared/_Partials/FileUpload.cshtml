<script type="module">
    // SELECTOR: must match your UL element
    const listSelector = '@Model.CopyUrlsTarget';

    // Create or reuse a toast element
    function ensureToast() {
        let toast = document.getElementById('uploadCopyToast');
        if (!toast) {
            toast = document.createElement('div');
            toast.id = 'uploadCopyToast';
            toast.className = 'toast align-items-center text-white bg-success border-0 position-fixed top-0 end-0 m-3';
            toast.setAttribute('role', 'alert');
            toast.setAttribute('aria-live', 'assertive');
            toast.setAttribute('aria-atomic', 'true');
            toast.innerHTML = `
        <div class="d-flex">
          <div class="toast-body">Copied to clipboard!</div>
          <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>`;
            document.body.appendChild(toast);
        }
        return toast;
    }

    function showSuccess() {
        const toastEl = ensureToast();
        const bootstrapRef = window.bootstrap && window.bootstrap.Toast;
        if (bootstrapRef) {
            new bootstrapRef(toastEl).show();
        } else {
            // Fallback: simple fade in/out
            toastEl.style.display = 'block';
            toastEl.style.opacity = '1';
            setTimeout(() => {
                toastEl.style.transition = 'opacity 300ms';
                toastEl.style.opacity = '0';
                setTimeout(() => { toastEl.style.display = 'none'; toastEl.style.transition = ''; }, 300);
            }, 1200);
        }
    }

    async function copy(text) {
        try {
            await navigator.clipboard.writeText(text);
            showSuccess();
        } catch {
            // Fallback
            const ta = document.createElement('textarea');
            ta.value = text;
            ta.style.position = 'fixed';
            ta.style.opacity = '0';
            document.body.appendChild(ta);
            ta.select();
            try { document.execCommand('copy'); } catch { }
            document.body.removeChild(ta);
            showSuccess();
        }
    }

    function buildCopyAs(copyAs, objectKey) {
        return copyAs == 'public' ?
            `{{ "${objectKey}" | attachment_public_url }}` : `{{ "${objectKey}" | attachment_redirect_url }}`;
    }

    // Delegate clicks on the UL
    const listEl = document.querySelector(listSelector);
    if (listEl) {
        listEl.addEventListener('click', (e) => {
            const target = e.target;
            if (!(target instanceof Element)) return;

            const copyAs = target.getAttribute('data-copyas');
            if (!copyAs) return;

            e.preventDefault();

            const objectKey = target.getAttribute('data-id') || '';
            const li = target.closest('li');

            copy(buildCopyAs(copyAs, objectKey));
        });
    }
</script>