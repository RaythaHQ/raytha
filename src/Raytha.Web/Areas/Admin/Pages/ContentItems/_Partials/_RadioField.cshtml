@using System.Linq
@using Raytha.Web.Areas.Admin.Pages.Shared.Models
@{
    var index = ViewData["Index"] as int? ?? 0;
    var parentModel = ViewData["ParentModel"] as BasePageModel;
    var choices = Model.AvailableChoices as System.Collections.IEnumerable;
    var lastItem = choices?.Cast<dynamic>().LastOrDefault();
}

<div class="col-lg-12 mt-4" id="raytha_field-@Model.DeveloperName">
    <div class="mb-3">
        <label class="form-label @Model.AsteriskCssIfRequired">@Model.Label</label>
        @if (Model.AvailableChoices != null)
        {
            @foreach (var availableChoice in Model.AvailableChoices)
            {
                <div class="form-check">
                    @if (availableChoice.Disabled) 
                    {
                        <input class="form-check-input @(parentModel?.HasError(Model.DeveloperName) ?? "")" 
                               type="radio" 
                               name="Form.FieldValues[@(index)].Value" 
                               value="@availableChoice.DeveloperName" 
                               checked="@(Model.Value == availableChoice.DeveloperName)" 
                               disabled="">
                    }
                    else
                    {
                        <input class="form-check-input @(parentModel?.HasError(Model.DeveloperName) ?? "")" 
                               type="radio" 
                               name="Form.FieldValues[@(index)].Value" 
                               value="@availableChoice.DeveloperName" 
                               checked="@(Model.Value == availableChoice.DeveloperName)">
                    }
                    <label class="form-check-label">@availableChoice.Label</label>
                    @if (availableChoice == lastItem)
                    {
                        <div class="invalid-feedback">@(parentModel?.ErrorMessageFor(Model.DeveloperName))</div>
                    }
                </div>
            }
        }
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <div class="form-text">@Model.Description</div>
        }
    </div>
</div>

