@using Raytha.Web.Areas.Admin.Pages.Shared.Models
@{
    var index = ViewData["Index"] as int? ?? 0;
    var parentModel = ViewData["ParentModel"] as BasePageModel;
}

<div class="col-lg-12 mt-4" id="raytha_field-@Model.DeveloperName">
    <div class="mb-3">
        <label class="form-label @Model.AsteriskCssIfRequired" for="Form_FieldValues_@(index)__Value">@Model.Label</label>
        <select class="form-select @(parentModel?.HasError(Model.DeveloperName) ?? "")" 
                id="Form_FieldValues_@(index)__Value" 
                name="Form.FieldValues[@(index)].Value">
            <option value="">-- SELECT --</option>
            @if (Model.AvailableChoices != null)
            {
                @foreach (var availableChoice in Model.AvailableChoices)
                {
                    @if (availableChoice.Disabled)
                    {
                        <option value="@availableChoice.Value" disabled="" selected="@(Model.Value == availableChoice.Value)">@availableChoice.Label (disabled)</option>
                    }
                    else
                    {
                        <option value="@availableChoice.Value" selected="@(Model.Value == availableChoice.Value)">@availableChoice.Label</option>
                    }
                }
            }
        </select>
        <div class="invalid-feedback">@(parentModel?.ErrorMessageFor(Model.DeveloperName))</div>
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <div class="form-text">@Model.Description</div>
        }
    </div>
</div>

