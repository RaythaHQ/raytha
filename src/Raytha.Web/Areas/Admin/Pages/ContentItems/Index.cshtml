@page "/raytha/{contentTypeDeveloperName}/{viewId?}"
@using Raytha.Web.Services
@inject IAuthorizationService AuthorizationService
@inject ICurrentOrganization CurrentOrganization
@model Raytha.Web.Areas.Admin.Pages.ContentItems.Index

@{
    var pageTitle = $"{Model.CurrentView.ContentType.LabelPlural} > {Model.CurrentView.Label}";
    Layout = "SidebarLayout";
    ViewData["Title"] = pageTitle;
    ViewData["ActiveMenu"] = Model.CurrentView.ContentType.DeveloperName;

    var columnsAsList = Model.CurrentView.Columns.ToList();
    var backToListUrl = Url.Page(RouteNames.ContentItems.Index, new
    {
        search = Model.ListView.Search,
        orderBy =
    Model.ListView.OrderByAsString,
        pageNumber = Model.ListView.PageNumber,
        pageSize = Model.ListView.PageSize
    });
}

<style>
    table thead th:last-child {
        position: sticky;
        right: 0;
        z-index: 2;
        background-color: white;
    }

    table tbody td:last-child {
        position: sticky;
        right: 0;
        z-index: 2;
        background-color: white;
    }
</style>

<partial name="_Partials/PageHeading" model='ViewData["Title"]' />

