@page "/raytha/{contentTypeDeveloperName}/begin-import-from-csv"
@model Raytha.Web.Areas.Admin.Pages.ContentTypes.BeginImportFromCsv

@{
    var pageTitle = $"{Model.CurrentView.ContentType.LabelPlural} > Import from CSV";
    Layout = "SidebarLayout";
    ViewData["Title"] = pageTitle;
    ViewData["ActiveMenu"] = Model.CurrentView.ContentType.DeveloperName;

    var back = new BackLinkOptions
    {
        Href = Model.BackToListUrl,
        Page = RouteNames.ContentItems.Index,
        RouteValues = new RouteValueDictionary
        {
            ["contentTypeDeveloperName"] = Model.CurrentView.ContentType.DeveloperName
        }
    };
}

<partial name="_Partials/PageHeading" model='ViewData["Title"]' />

<div class="row mb-4">
    <div class="col-xxl-7 col-xl-8 col-lg-9 col-md-12">
        <div class="card border-0 shadow mb-4">
            <div class="card-body">
                @if (string.IsNullOrEmpty(Model.TaskId))
                {
                    @* State A - Show Import Form *@
                    @(await Html.PartialAsync("_Partials/BackToList", back))

                    <form method="post" enctype="multipart/form-data" class="py-4" asp-route-backToListUrl="@Model.BackToListUrl">
                        <div class="col-lg-12 mt-2">
                            <div class="mb-3">
                                <label class="form-label">Import Method</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="ImportMethod" value="add_new_records_only" 
                                        checked id="importMethodAddNew">
                                    <label class="form-check-label" for="importMethodAddNew">
                                        Add new records only (skip existing)
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="ImportMethod" value="upsert_all_records" 
                                        id="importMethodUpsert">
                                    <label class="form-check-label" for="importMethodUpsert">
                                        Upsert all records (add new, update existing)
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="ImportMethod" value="update_existing_records_only" 
                                        id="importMethodUpdateOnly">
                                    <label class="form-check-label" for="importMethodUpdateOnly">
                                        Update existing records only (skip new)
                                    </label>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="col-lg-12 mt-2">
                            <div class="mb-3">
                                <label class="form-label raytha-required" asp-for="ImportFile">CSV File</label>
                                <input type="file" class="form-control @Model.HasError("ImportFile")" asp-for="ImportFile" accept=".csv">
                                <div class="invalid-feedback">@Model.ErrorMessageFor("ImportFile")</div>
                                <div class="form-text">Upload a CSV file to import content items.</div>
                            </div>
                        </div>
                        <div class="col-lg-12 mt-3">
                            <button type="submit" class="btn btn-secondary" name="ImportAsDraft" value="true">Import as draft status</button>
                            <button type="submit" class="btn btn-success mx-2" name="ImportAsDraft" value="false">Import as published status</button>
                        </div>
                    </form>
                }
                else
                {
                    @* State B - Show Progress Tracker *@
                    <div id="import-progress-config" data-path-base="@Model.PathBase" data-task-id="@Model.TaskId" style="display:none;"></div>

                    <div id="back-to-view" style="display:none;">
                        @(await Html.PartialAsync("_Partials/BackToList", back))
                    </div>

                    <div class="py-4">
                        <div class="progress">
                            <div id="progress-bar" class="progress-bar" role="progressbar" aria-valuenow="0"
                                aria-valuemin="0" aria-valuemax="100">
                            </div>
                        </div>

                        <ul id="status-info" class="list-group mt-3">
                            <li class="list-group-item">Background task running...</li>
                        </ul>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module" defer src="~/js/pages/content-types/import-from-csv.js"></script>
}
