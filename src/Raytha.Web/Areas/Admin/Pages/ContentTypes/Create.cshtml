@page "/raytha/content-types/create"
@model Raytha.Web.Areas.Admin.Pages.ContentTypes.Create

@{
    var pageTitle = "Create content type";
    Layout = "SidebarLayout";
    ViewData["Title"] = pageTitle;
    ViewData["ActiveMenu"] = "Content Types";
}

<div>
    <div class="row mb-4">
    @await Html.PartialAsync("_Partials/PageHeading", ViewData["Title"])
    <div class="col-xxl-7 col-xl-8 col-lg-9 col-md-12">
        <div class="card border-0 shadow mb-4">
            <div class="card-body">
                <form asp-page="@RouteNames.ContentTypes.Create" method="post" class="py-4" novalidate>
                    <div class="col-lg-12 col-md-12">
                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="Form.LabelPlural"></label>
                            <input type="text" class="form-control @Model.HasError("LabelPlural")"
                                asp-for="Form.LabelPlural" required id="label-plural-input">
                            <div class="invalid-feedback">@Model.ErrorMessageFor("LabelPlural")</div>
                        </div>
                    </div>

                    <div class="col-lg-12 col-md-12">
                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="Form.LabelSingular"></label>
                            <input type="text" class="form-control @Model.HasError("LabelSingular")"
                                asp-for="Form.LabelSingular" required>
                            <div class="invalid-feedback">@Model.ErrorMessageFor("LabelSingular")</div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12">
                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="Form.DeveloperName"></label>
                            <input type="text" class="form-control" asp-for="Form.DeveloperName" id="developer-name-input">
                            <div class="invalid-feedback">@Model.ErrorMessageFor("DeveloperName")</div>
                            <div class="form-text">You cannot change the developer name after it has been created.</div>
                        </div>
                    </div>
                    <div class="col-lg-12 mt-4">
                        <label class="form-label raytha-required" asp-for="Form.DefaultRouteTemplate"></label>
                        <div class="input-group mb-3">
                            <span class="input-group-text">@Model.WebsiteUrl</span>
                            <input type="text" class="form-control @Model.HasError("DefaultRouteTemplate")"
                                asp-for="Form.DefaultRouteTemplate" required>
                            <div class="invalid-feedback">@Model.ErrorMessageFor("DefaultRouteTemplate")</div>
                        </div>
                        <div class="form-text">Available variables: {PrimaryField}, {ContentTypeDeveloperName}, {Id},
                            {CurrentYear}, {CurrentMonth}</div>
                    </div>
                    <div class="col-lg-12 mt-4">
                        <div class="mb-3">
                            <label class="form-label" asp-for="Form.Description"></label>
                            <textarea class="form-control @Model.HasError("Description")"
                                asp-for="Form.Description"></textarea>
                            <div class="invalid-feedback">@Model.ErrorMessageFor("Description")</div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">Save</button>
                </form>
            </div>
        </div>
    </div>
    </div>
</div>

@section Scripts {
<script type="module" defer src="~/js/pages/content-types/create.js"></script>
}
