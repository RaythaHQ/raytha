<!--
  Home Page Template
  
  This template is designed for Site Pages using the widget system.
  Available sections:
    - hero: Full-width hero section at the top (ideal for Hero widget)
    - features: Feature cards or highlights section
    - content: Main content area  
    - cta: Call-to-action section at the bottom
  
  Usage: {{ render_section("section_name") }}
  
  Each section renders widgets that have been placed in that section
  via the Site Pages admin interface.
-->

<!-- Hero Section -->
<section class="hero-section">
  {{ render_section("hero") }}
</section>

<!-- Features Section -->
<section class="features-section py-5">
  <div class="container py-4">
    {{ render_section("features") }}
  </div>
</section>

<!-- Content Section -->
<section class="content-section bg-white py-5">
  <div class="container py-4">
    {{ render_section("content") }}
  </div>
</section>

<!-- CTA Section -->
<section class="cta-section">
  {{ render_section("cta") }}
</section>
