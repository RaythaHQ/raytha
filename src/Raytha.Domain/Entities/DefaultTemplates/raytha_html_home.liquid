<!-- Hero Section -->
<div class="bg-primary bg-gradient text-white py-5">
  <div class="container py-5">
    <div class="row align-items-center g-5">
      <div class="col-lg-6">
        <h1 class="display-4 fw-bold mb-3">
          <i class="bi bi-check-circle-fill me-2"></i>You did it!
        </h1>
        <p class="lead mb-4 opacity-75">
          Welcome to the Raytha Content Management System! This is your starting point for building something amazing. Head to the Admin Panel to customize everything.
        </p>
        <div class="d-flex flex-wrap gap-3">
          <a href="{{ PathBase }}/raytha" class="btn btn-light btn-lg px-4 d-inline-flex align-items-center gap-2">
            <i class="bi bi-gear-fill"></i>
            Admin Panel
          </a>
          <a href="https://raytha.com/user-guide" class="btn btn-outline-light btn-lg px-4 d-inline-flex align-items-center gap-2">
