{% comment %}
  Card Widget Template
  
  Available variables:
    widget.title        - Card title
    widget.description  - Card description/content (HTML)
    widget.image_url    - Card image URL (optional)
    widget.image_alt    - Image alt text (optional)
    widget.button_text  - Button/link text (optional)
    widget.button_url   - Button/link URL (optional)
    widget.button_style - Button style: primary, secondary, outline-primary, link
    widget.background_color - Background color (optional)
    widget.css_class    - Custom CSS class (optional)
    widget.html_id      - Custom HTML ID (optional)
    widget.custom_attributes - Custom HTML attributes (optional)
{% endcomment %}

<div class="raytha-widget-card{% if widget.css_class %} {{ widget.css_class }}{% endif %}"
     {% if widget.html_id %}id="{{ widget.html_id }}"{% endif %}
     {% if widget.custom_attributes %}{{ widget.custom_attributes }}{% endif %}
     {% if widget.background_color %}style="background-color: {{ widget.background_color }};"{% endif %}>
  <div class="card h-100 border-0 shadow-sm">
    {% if widget.image_url %}
    <img src="{{ widget.image_url }}" 
         class="card-img-top" 
         alt="{{ widget.image_alt | default: widget.title }}">
    {% endif %}
    <div class="card-body d-flex flex-column">
      {% if widget.title %}
      <h5 class="card-title">{{ widget.title }}</h5>
      {% endif %}
      {% if widget.description %}
      <div class="card-text flex-grow-1">{{ widget.description }}</div>
      {% endif %}
      {% if widget.button_text and widget.button_url %}
      <div class="mt-3">
        <a href="{{ widget.button_url }}" class="btn btn-{{ widget.button_style | default: 'primary' }}">
          {{ widget.button_text }}
        </a>
      </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
.raytha-widget-card {
  padding: 1rem 0;
}
.raytha-widget-card .card {
  max-width: 400px;
  margin: 0 auto;
}
.raytha-widget-card .card-img-top {
  object-fit: cover;
  height: 200px;
}
.raytha-widget-card .card-text {
  color: #6c757d;
}
</style>

