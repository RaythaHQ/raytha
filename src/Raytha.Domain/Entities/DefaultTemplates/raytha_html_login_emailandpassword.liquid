<div class="ud-login-logo">
  <h3>Login</h3>
</div>
{% if Target.ValidationFailures["__ValidationSummary"] %}
  <div class="alert alert-danger">
    {{ Target.ValidationFailures["__ValidationSummary"] }}
  </div>
{% endif %}
<form
  class="ud-login-form"
  action="/account/login"
  method="post">
  <div class="ud-form-group">
    <label for="email" class="form-label">Email address</label>
    <input
      id="email"
      type="email"
      name="EmailAddress">
  </div>
  <div class="ud-form-group">
    <label for="password" class="form-label">Password</label>
    <input
      id="password"
      type="password"
      name="Password">
  </div>
  <div class="ud-form-group">
    <button type="submit" class="ud-main-btn w-100">Login</button>
  </div>
  <input
    name="__RequestVerificationToken"
    type="hidden"
    value="{{ Target.RequestVerificationToken }}" />
</form>
{% if Target.ShowOrLoginWithSection %}
  <div class="ud-socials-connect">
    <p>or login with</p>
    <ul>
      {% if Target.HasLoginByMagicLink %}
        <li>
          <a href="/account/login/magic-link" class="btn btn-secondary">
            {{ Target.MagicLink.LoginButtonText }}
          </a>
        </li>
      {% endif %}
      {% if Target.HasLoginBySingleSignOn %}
        {% for sso in Target.SingleSignOns %}
          <li>
            <a href="/account/login/sso/{{ sso.DeveloperName }}" class="btn btn-secondary">
              {{ sso.LoginButtonText }}
            </a>
          </li>
        {% endfor %}
      {% endif %}
    </ul>
  </div>
{% endif %}


<a class="forget-pass" href="/account/login/forgot-password/begin">
  Forgot password?
</a>
<p class="signup-option">
  No account?
  <a href="javascript:void(0)">
    Sign up
  </a>
</p>